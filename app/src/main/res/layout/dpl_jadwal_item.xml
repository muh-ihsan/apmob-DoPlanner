<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_matkul_jadwal_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dpl_text_card_margin"
            android:layout_marginTop="8dp"
            android:paddingVertical="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/bt_edit_jadwal_card"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Mata Kuliah" />

        <TextView
            android:id="@+id/tv_tanggal_jadwal_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dpl_text_card_margin"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_matkul_jadwal_card"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Hari, 01/01/2000"/>

        <ImageButton
            android:id="@+id/bt_hapus_jadwal_card"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:tint="@color/PrimaryButtonColor"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_delete_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/bt_edit_jadwal_card"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:tint="@color/PrimaryButtonColor"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_edit_24"
            app:layout_constraintEnd_toStartOf="@id/bt_hapus_jadwal_card"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_media_jadwal_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Microsoft Teams"
            android:textSize="16sp"
            android:layout_marginStart="@dimen/dpl_text_card_margin"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tanggal_jadwal_card"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_link_jadwal_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="http://microsoft.com"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/dpl_text_card_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_media_jadwal_card" />

        <TextView
            android:id="@+id/tv_kelas_jadwal_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Item Kelas"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_link_jadwal_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dpl_text_card_margin"
            android:layout_marginTop="4dp"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_jam_jadwal_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Item Jam"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_kelas_jadwal_card"
            app:layout_constraintTop_toBottomOf="@id/tv_link_jadwal_card"
            android:padding="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>