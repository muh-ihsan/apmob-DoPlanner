<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_nama_tugas_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dpl_text_card_margin"
            android:layout_marginTop="8dp"
            android:paddingVertical="8dp"
            android:text="Item Tugas"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_matkul_tugas_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dpl_matkul"
            android:textSize="16sp"
            android:layout_marginStart="@dimen/dpl_text_card_margin"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_tugas_card"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_deadline_tugas_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dpl_item_tugas_deadline"
            android:textSize="16sp"
            android:layout_marginStart="@dimen/dpl_text_card_margin"
            app:layout_constraintTop_toBottomOf="@id/tv_matkul_tugas_card"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_tgl_deadline_tugas_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2000"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_matkul_tugas_card"
            app:layout_constraintStart_toEndOf="@id/tv_deadline_tugas_card" />

        <TextView
            android:id="@+id/tv_kelas_tugas_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dpl_text_card_margin"
            android:paddingVertical="8dp"
            android:text="Item Kelas"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_deadline_tugas_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>