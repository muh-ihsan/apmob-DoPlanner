<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tubesApmob.doplanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".DoPlannerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoPlanner">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity" />
        <activity
            android:name=".LoginActivity" />
        <activity
            android:name=".SignupActivity" />
        <activity
            android:name=".ForgotPasswordActivity" />
        <activity
            android:name=".FirstSetupActivity" />
        <activity
            android:name=".JadwalActivity" />
        <activity
            android:name=".TugasActivity" />
        <activity
            android:name=".DaftarMahasiswaActivity" />
        <activity
            android:name=".TambahJadwalActivity" />
    </application>

</manifest>